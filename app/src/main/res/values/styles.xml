<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <!-- colorPrimary is used for coloring the Toolbar -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- colorPrimaryDark is used for coloring the status bar -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!-- colorAccent is used as the default value for colorControlActivated which is used to tint widgets -->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="toolbar_title_port" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

    <style name="toolbar_title_land" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

</resources>
