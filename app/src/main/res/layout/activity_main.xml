<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:background="@drawable/bckgrnd"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="0dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">

         <!--registration title-->
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="REGISTRATION"
            android:textColor="#fff"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textStyle="bold"/>


        <!--form-->
        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#CE795548"
            android:elevation="4dp">
            <LinearLayout
                android:layout_width="470dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

        <!--First Name-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView android:src="@drawable/ic_firstname"
                android:layout_width="24dp"
                android:id="@+id/iv_firstname"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="8dp"
                android:paddingBottom="-50dp" />
            <android.support.design.widget.TextInputLayout
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_toEndOf="@id/iv_firstname"
            android:id="@+id/et_input_firstname"
                android:paddingStart="10dp">
                <!--Firstname Label-->
            <EditText
                android:layout_width="match_parent"
                android:id="@+id/et_firstname"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"
                android:hint="First Name" />
            </android.support.design.widget.TextInputLayout>
        </RelativeLayout>


        <!--First Name-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView android:src="@drawable/ic_lastname"
                android:layout_width="24dp"
                android:id="@+id/iv_lastname"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="8dp"
                android:paddingBottom="5dp" />
            <android.support.design.widget.TextInputLayout
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_toRightOf="@id/iv_lastname"
                android:id="@+id/et_input_lastname"
                android:paddingStart="10dp">
                <!--Firstname Label-->
                <EditText
                    android:layout_width="match_parent"
                    android:id="@+id/et_lastname"
                    android:layout_height="wrap_content"
                    android:inputType="textCapWords"
                    android:hint="Last Name" />
            </android.support.design.widget.TextInputLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <RadioButton
            android:layout_width="wrap_content"
            android:id="@+id/rb_male"
            android:onClick="onClickRb"
            android:layout_height="wrap_content"
            android:text="Male"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="47dp" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rb_female"
            android:textColor="@color/white"
            android:onClick="onClickRb"
            android:text="Female"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/rb_male"
            android:layout_marginStart="70dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView android:src="@drawable/ic_email"
                android:layout_width="24dp"
                android:id="@+id/iv_email"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="8dp"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp" />
        <!-- Email Label -->
        <android.support.design.widget.TextInputLayout
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_toRightOf="@+id/iv_email"
            android:id="@+id/et_input_email"
            android:paddingStart="10dp">
            <EditText  android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:id="@+id/et_email"
                android:hint="Email" />
        </android.support.design.widget.TextInputLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView android:src="@drawable/ic_phone"
                android:layout_width="24dp"
                android:id="@+id/iv_mobile"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="8dp"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"/>
        <!-- Phone Number Label -->
        <android.support.design.widget.TextInputLayout
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:id="@+id/et_input_phonenumber"
            android:layout_toRightOf="@+id/iv_mobile"
            android:paddingStart="10dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_phonenumber"
                android:inputType="number"
                android:hint="Mobile" />
        </android.support.design.widget.TextInputLayout>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView android:src="@drawable/ic_institute"
                android:layout_width="24dp"
                android:id="@+id/iv_institute"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="8dp"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"/>
        <!-- Institute Label -->
        <android.support.design.widget.TextInputLayout
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:id="@+id/et_input_institute"
            android:layout_toRightOf="@id/iv_institute"
            android:paddingLeft="10dp">
            <EditText
                android:id="@+id/et_institute"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textLongMessage"
                android:hint="College/School" />
        </android.support.design.widget.TextInputLayout>
        </RelativeLayout>

        <!-- Event Label -->
        <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHOOSE EVENT"
            android:textSize="20sp"
            android:paddingStart="30dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <!--Spinner-->
        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/s_events"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="24dp"
            android:padding="8dp"
            android:textSize="16dp"
            android:popupBackground="@color/primary"
            android:spinnerMode="dropdown" />
            <ImageView android:src="@drawable/ic_events"
                android:layout_width="24dp"
                android:id="@+id/iv_eventlist"
                android:layout_marginLeft="8dp"
                android:layout_alignBottom="@+id/s_events"
                android:layout_height="wrap_content"
                android:baselineAlignBottom="true"
                android:paddingBottom="5dp"/>
        </RelativeLayout>

        <!--Accomodation Checkbox -->
        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/cb_accomodation"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="8dp"
            android:layout_marginLeft="8dp"
            android:textSize="16sp"
            android:text="Do you want accomodation?"/>



        <!-- Register Button -->
        <Button
            android:id="@+id/b_register"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="24dp"
            android:padding="12dp"
            android:textColor="@color/primary"
            android:text="Register"
            android:layout_marginLeft="20dp"
            android:textAlignment="center"
            android:gravity="center"
            android:onClick="onClickRegisterBtn"/>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>


        </LinearLayout>
