<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.seetharaman.trial.MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/ll_details"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="15">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="2"
                    android:layout_marginTop="22dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/name_opacity"
                    android:id="@+id/image1"/>
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/til_firstNameWrapper"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColorHint="#BDBDBD"
                    android:layout_weight="13"
                    app:hintTextAppearance="@style/error_appearance"
                    app:errorTextAppearance="@style/error_appearance"
                    >
                    <EditText
                        android:id="@+id/et_firstName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:hint="First Name"
                        android:background="@drawable/edittextbox"
                        android:textColor="@color/white"
                        android:paddingTop="15dp"
                        android:paddingBottom="9dp"
                        android:paddingLeft="7dp" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="15">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="2"
                    android:layout_marginTop="26dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/name_opacity"
                    android:id="@+id/image2"/>
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/til_lastNameWrapper"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_weight="13"
                    app:hintTextAppearance="@style/error_appearance"
                    app:errorTextAppearance="@style/error_appearance"
                    android:textColorHint="#BDBDBD">

                    <EditText
                        android:id="@+id/et_lastName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:hint="Last Name"
                        android:background="@drawable/edittextbox"
                        android:textColor="@color/white"
                        android:paddingLeft="7dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="9dp" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="15">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="2"
                    android:layout_marginTop="26dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/email_opacity"
                    android:id="@+id/image3"/>
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/til_emailWrapper"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_weight="13"
                    app:hintTextAppearance="@style/error_appearance"
                    app:errorTextAppearance="@style/error_appearance"
                    android:textColorHint="#BDBDBD">

                    <EditText
                        android:id="@+id/et_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:hint="Email"
                        android:background="@drawable/edittextbox"
                        android:textColor="@color/white"
                        android:paddingLeft="7dp"
                        android:paddingBottom="9dp"
                        android:paddingTop="15dp" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="15">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="2"
                    android:layout_marginTop="26dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/phone_opacity"
                    android:id="@+id/image4"/>
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/til_contactWrapper"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_weight="13"
                    app:hintTextAppearance="@style/error_appearance"
                    app:errorTextAppearance="@style/error_appearance"
                    android:textColorHint="#BDBDBD">

                    <EditText
                        android:id="@+id/et_contact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:hint="Contact No"
                        android:background="@drawable/edittextbox"
                        android:textColor="@color/white"
                        android:paddingLeft="7dp"
                        android:paddingBottom="9dp"
                        android:paddingTop="15dp" />

                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="15">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="2"
                    android:layout_marginTop="26dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/college_opacity"
                    android:id="@+id/image5"/>
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/til_collegeWrapper"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_weight="13"
                    app:hintTextAppearance="@style/error_appearance"
                    app:errorTextAppearance="@style/error_appearance"
                    android:textColorHint="#BDBDBD">

                    <EditText
                        android:id="@+id/et_college"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:hint="School/College Name"
                        android:background="@drawable/edittextbox"
                        android:textColor="@color/white"
                        android:paddingLeft="7dp"
                        android:paddingBottom="9dp"
                        android:paddingTop="15dp" />

                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

        </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SUBMIT"
            android:id="@+id/b_submit"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:background="@drawable/edittextbox"
            android:onClick="submit"
            android:layout_marginTop="90dp"
            android:layout_below="@id/ll_details"
            />
    </RelativeLayout>



</ScrollView>
